<%- include("partials/header") %>
<div class="container center">
    <h2 class=" mt-3 text-white text-center p-2"><%= info["Title"] %> </h4>       
</div>
<div class="container center ">
    <% if(info["Poster"]=="N/A"){info["Poster"]="https://www.lbsnaa.gov.in/upload/academy_souvenir/images/590320c6a39b7No-image-available.jpg"} %> 
    
    <img class="m-2 rounded-lg" src="<%= info["Poster"] %> " alt="" width="250">
    <ul class="collapsible popout  col s6">
        <li>
          <div class="collapsible-header"><i class="material-icons">explore</i>Plot</div>
          <div class="collapsible-body"><span><%= info["Plot"] %></span></div>
        </li>
        <li>
          <div class="collapsible-header"><i class="material-icons">local_activity</i>Genre</div>
          <div class="collapsible-body"><span><%= info["Genre"] %></span></div>
        </li>
        <li>
          <div class="collapsible-header"><i class="material-icons">face</i>Director</div>
          <div class="collapsible-body"><span><%= info["Director"] %>.</span></div>
        </li>
        <li>
            <div class="collapsible-header"><i class="material-icons">whatshot</i>Actors</div>
            <div class="collapsible-body"><span><%= info["Actors"] %>.</span></div>
        </li>
        <li>
            <div class="collapsible-header"><i class="material-icons">assessment</i>Rating</div>
            <div class="collapsible-body"><span><%= info["imdbRating"] %>.</span></div>
        </li>
      </ul>

    
</div>
<div class="container center">
  <% var link="/add/"+info["imdbID"] %> 
  <a href="<%= link %> " class="btn btn-small halfway-fab waves-effect waves-light light-blue accent-2">Add to watchlist</a>
</div>


<%- include("partials/footer") %>
<script>
    $(document).ready(function(){
    $('.collapsible').collapsible();
  });
</script>
